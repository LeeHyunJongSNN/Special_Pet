<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Background"
    tools:context=".BusanActivity">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="FULL_BANNER"
        app:adUnitId="ca-app-pub-4756367925005641/1469285725"></com.google.android.gms.ads.AdView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/go_geumjung"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/my_button"
            android:fontFamily="@font/kotra_bold"
            android:foreground="?selectableItemBackground"
            android:text="금정"
            android:textColor="@color/black"
            android:textSize="5dp"
            app:backgroundTint="@color/Button_color" />

        <Button
            android:id="@+id/go_dongrae"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/my_button"
            android:fontFamily="@font/kotra_bold"
            android:foreground="?selectableItemBackground"
            android:text="동래"
            android:textColor="@color/black"
            android:textSize="5dp"
            app:backgroundTint="@color/Button_color" />

        <Button
            android:id="@+id/go_bukgu"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/my_button"
            android:fontFamily="@font/kotra_bold"
            android:foreground="?selectableItemBackground"
            android:text="북구"
            android:textColor="@color/black"
            android:textSize="5dp"
            app:backgroundTint="@color/Button_color" />

        <Button
            android:id="@+id/go_junggu"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/my_button"
            android:fontFamily="@font/kotra_bold"
            android:foreground="?selectableItemBackground"
            android:text="중구"
            android:textColor="@color/black"
            android:textSize="5dp"
            app:backgroundTint="@color/Button_color" />

        <Button
            android:id="@+id/go_yeonje"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/my_button"
            android:fontFamily="@font/kotra_bold"
            android:foreground="?selectableItemBackground"
            android:text="연제"
            android:textColor="@color/black"
            android:textSize="5dp"
            app:backgroundTint="@color/Button_color" />

        <Button
            android:id="@+id/go_bunamgu"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/my_button"
            android:fontFamily="@font/kotra_bold"
            android:foreground="?selectableItemBackground"
            android:text="남구"
            android:textColor="@color/black"
            android:textSize="5dp"
            app:backgroundTint="@color/Button_color" />

        <Button
            android:id="@+id/go_bugangseo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/my_button"
            android:fontFamily="@font/kotra_bold"
            android:foreground="?selectableItemBackground"
