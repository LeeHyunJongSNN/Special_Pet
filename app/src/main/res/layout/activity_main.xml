<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Background"
    tools:context=".MainActivity" >

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="FULL_BANNER"
        app:adUnitId="ca-app-pub-4756367925005641/9518030662"></com.google.android.gms.ads.AdView>

    <TextView
        android:id="@+id/select_legion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:text="지역을 선택해주세요"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:fontFamily="@font/kotra_bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/information"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/my_button"
            android:fontFamily="@font/kotra_bold"
            android:layout_weight="1"
            android:text="질병정보"
            android:textColor="@color/black"
            android:textSize="9dp"
            app:backgroundTint="@color/Button_color"
            android:foreground="?selectableItemBackground"/>

        <Button
            android:id="@+id/help"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/my_button"
            android:fontFamily="@font/kotra_bold"
            android:layout_weight="1"
            android:text="관련사이트"
            android:textColor="@color/black"
            android:textSize="9dp"
            app:backgroundTint="@color/Button_color"
            android:foreground="?selectableItemBackground"/>

        <Button
            android:id="@+id/more"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/my_button"
            android:fontFamily="@font/kotra_bold"
            android:layout_weight="1"
            android:text="건의사항"
            android:textColor="@color/black"
            android:textSize="9dp"
            app:backgroundTint="@color/Button_color"
            android:foreground="?selectableItemBackground"/>

        <Button
            android:id="@+id/close_app"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/my_button"
            android:fontFamily="@font/kotra_bold"
            android:layout_weight="1"
            android:text="종료하기"
            android:textColor="@color/black"
            android:textSize="9dp"
            app:backgroundTint="@color/Button_color"
            android:foreground="?selectableItemBackground"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/seoul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button"
                android:text="서울"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:backgroundTint="@color/Button_color"
                android:fontFamily="@font/kotra_bold"
                android:foreground="?selectableItemBackground" />

            <Button
                android:id="@+id/gyeonggi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button"
                android:fontFamily="@font/kotra_bold"
                android:foreground="?selectableItemBackground"
                android:text="경기"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:backgroundTint="@color/Button_color" />

            <Button
                android:id="@+id/incheon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button"
                android:text="인천"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:backgroundTint="@color/Button_color"
                android:fontFamily="@font/kotra_bold"
                android:foreground="?selectableItemBackground"/>

            <Button
                android:id="@+id/gangwon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button"
                android:text="강원"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:backgroundTint="@color/Button_color"
                android:fontFamily="@font/kotra_bold"
                android:foreground="?selectableItemBackground"/>

            <Button
                android:id="@+id/chooongchung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button"
                android:text="충청"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:backgroundTint="@color/Button_color"
                android:fontFamily="@font/kotra_bold"
                android:foreground="?selectableItemBackground"/>

            <Button
                android:id="@+id/gyeongsang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button"
                android:text="경상"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:backgroundTint="@color/Button_color"
                android:fontFamily="@font/kotra_bold"
                android:foreground="?selectableItemBackground"/>

            <Button
                android:id="@+id/jeonra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button"
                android:text="전라"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:backgroundTint="@color/Button_color"
                android:fontFamily="@font/kotra_bold"
                android:foreground="?selectableItemBackground"/>

            <Button
                android:id="@+id/daejeon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button"
                android:text="대전"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:backgroundTint="@color/Button_color"
                android:fontFamily="@font/kotra_bold"
                android:foreground="?selectableItemBackground"/>


            <Button
                android:id="@+id/sejong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button"
                android:text="세종"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:backgroundTint="@color/Button_color"
                android:fontFamily="@font/kotra_bold"
                android:foreground="?selectableItemBackground"/>

            <Button
                android:id="@+id/daegu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button"
                android:text="대구"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:backgroundTint="@color/Button_color"
                android:fontFamily="@font/kotra_bold"
                android:foreground="?selectableItemBackground"/>

            <Button
                android:id="@+id/busan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button"
                android:text="부산"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:backgroundTint="@color/Button_color"
                android:fontFamily="@font/kotra_bold"
                android:foreground="?selectableItemBackground"/>

            <Button
                android:id="@+id/ulsan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button"
                android:text="울산"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:backgroundTint="@color/Button_color"
                android:fontFamily="@font/kotra_bold"
                android:foreground="?selectableItemBackground"/>

            <Button
                android:id="@+id/gwangju"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button"
                android:text="광주"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:backgroundTint="@color/Button_color"
                android:fontFamily="@font/kotra_bold"
                android:foreground="?selectableItemBackground"/>

            <Button
                android:id="@+id/jeju"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button"
                android:text="제주"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:backgroundTint="@color/Button_color"
                android:fontFamily="@font/kotra_bold"
                android:foreground="?selectableItemBackground"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>